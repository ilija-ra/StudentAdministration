@model IEnumerable<StudentAdministration.Client.Models.Subjects.GetAllViewModelItem>

@{
    ViewData["Title"] = "All subjects";
}

<partial name="_Notification" />

<h1 style="text-align:center">All subjects</h1>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-responsive-sm display" style="text-align:center">
        <thead>
            <tr>
                <th style="width:30%">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th style="width:15%">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th style="width:30%">
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th style="width:15%">
                    @Html.DisplayNameFor(model => model.Professor!.FullName)
                </th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Professor!.FullName)
                    </td>
                    <td>
                        @Html.ActionLink("Enroll", "Enroll", "Subjects", new
                        {
                            subjectId = item.Id,
                            subjectPartitionKey = item.PartitionKey,
                            professorFullName = item.Professor!.FullName
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="d-flex justify-content-center mt-3">
        No content
    </div>
}