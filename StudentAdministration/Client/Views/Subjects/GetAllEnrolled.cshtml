@model IEnumerable<StudentAdministration.Client.Models.Subjects.GetAllEnrolledViewModelItem>

@{
    ViewData["Title"] = "Your subjects";
}

<partial name="_Notification" />

<h1 style ="text-align:center">My subjects</h1>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-responsive-sm display" style="text-align:center">
        <thead>
            <tr>
                @* <th>
            @Html.DisplayNameFor(model => model.Id)
            </th> *@
                <th style="width:20%">
                    @Html.DisplayNameFor(model => model.Subject!.Title)
                </th>
                <th style="width:40%">
                    @Html.DisplayNameFor(model => model.Subject!.Department)
                </th>
                <th style="width:20%">
                    @Html.DisplayNameFor(model => model.ProfessorFullName)
                </th>
                <th style="width:10%">
                    @Html.DisplayNameFor(model => model.Subject!.Grade)
                </th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>
            @Html.DisplayFor(modelItem => item.Id)
            </td> *@
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject!.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject!.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProfessorFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject!.Grade)
                    </td>
                    <td>
                        @Html.ActionLink("Drop out", "DropOut", "Subjects", new { subjectId = item.Subject!.Id, studentId = item.StudentId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-right">
        <input type="button" class="btn btn-primary" value="Confirm subjects" onclick="location.href='@Url.Action("ConfirmSubjects", "Subjects")'" />
    </div>
}
else
{
    <div class="d-flex justify-content-center mt-3">
        No content
    </div>
}
